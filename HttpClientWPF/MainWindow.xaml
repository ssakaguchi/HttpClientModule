<Window x:Class="HttpClientWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HttpClientWPF"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        Loaded="Window_Loaded"
        Title="HttpClient" Height="300" Width="600" MaxHeight="300" MaxWidth="600" MinHeight="300" MinWidth="600">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <GroupBox Margin="10,5,10,0"
                      Header="Server Information"
                      FontSize="20">
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Host name:" FontSize="16" Width="80" Margin="0,5,0,0"  />
                        <TextBox Text="{Binding HostName.Value}" FontSize="16" Margin="10,0,0,0" Width="140"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="PortNo:" FontSize="16" Width="80" Margin="0,5,0,0" />
                        <TextBox Text="{Binding PortNo.Value}" FontSize="16" Margin="10,5,0,0" Width="45"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Path:" FontSize="16" Width="80" Margin="0,5,0,0" />
                        <TextBox Text="{Binding Path.Value}" FontSize="16" Margin="10,5,0,0" Width="140"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>
            <GroupBox Margin="10,0,10,0" Header="Settings" FontSize="20">
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Timeout seconds:" FontSize="16" Width="125" Margin="0,5,0,0" />
                        <TextBox Text="{Binding TimeoutSeconds.Value}" FontSize="16" Margin="10,5,0,0" Width="30" TextAlignment="Right"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>
        </StackPanel>
        <DockPanel Grid.Row="1">
            <Button Content="Save" Command="{Binding SaveCommand}" FontSize="16" Margin="5" Height="30" Width="60" />
            <Button Content="Send" Command="{Binding SendCommand}" FontSize="16" Margin="5" Height="30" Width="60" HorizontalAlignment="Right"/>
        </DockPanel>
        <!--<TextBox Grid.Column="1" Text="{Binding LogText}" Grid.RowSpan="2" Margin="5" IsReadOnly="True" />-->
    </Grid>
</Window>
